
RewriteEngine On

# ----------------------------------------------------------------------
# Hostinger Node.js Proxy Configuration
# ----------------------------------------------------------------------
# This rule forwards ALL requests (API, Static, and Root) to the 
# Node.js application running on the environment port.
# This ensures server.js is the single source of truth for routing.
# ----------------------------------------------------------------------

RewriteRule ^(.*)$ http://127.0.0.1:%{ENV:PORT}/$1 [P,L]
